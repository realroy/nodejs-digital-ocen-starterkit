{
  "env": {
    "browser": false,
    "commonjs": true,
    "node": true
  },
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "ignorePatterns": [
    "**/*.spec.js"
  ],
  "rules": {
    "prettier/prettier": "error",
    "no-undefined": "error",
    "no-unused-expressions":"error",
    "no-unused-vars":"error",
    "no-var": "error",
    "no-console": "error"
 },
  "plugins": ["prettier"]
}
